    <script>
        // ==================== GLOBAL VARIABLES ====================
        let currentUser = null;
        let userCards = [];
        const API_BASE_URL = 'http://localhost:3000/api'; // Change this to your backend URL
        
        // ==================== AUTHENTICATION FUNCTIONS ====================
        
        // Show loading
        function showLoading() {
            document.getElementById('loading').style.display = 'flex';
        }
        
        // Hide loading
        function hideLoading() {
            document.getElementById('loading').style.display = 'none';
        }
        
        // Show toast notification
        function showToast(message, type = 'info') {
            const toast = document.getElementById('toast');
            toast.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'error' ? 'exclamation-circle' : 'info-circle'}"></i>
                <span>${message}</span>
            `;
            toast.className = `toast ${type} show`;
            
            setTimeout(() => {
                toast.classList.remove('show');
            }, 3000);
        }
        
        // Switch between login/register/forgot password forms
        document.getElementById('showRegister').addEventListener('click', function(e) {
            e.preventDefault();
            document.getElementById('loginForm').style.display = 'none';
            document.getElementById('registerForm').style.display = 'block';
            document.getElementById('forgotPasswordForm').style.display = 'none';
        });
        
        document.getElementById('showLogin').addEventListener('click', function(e) {
            e.preventDefault();
            document.getElementById('loginForm').style.display = 'block';
            document.getElementById('registerForm').style.display = 'none';
            document.getElementById('forgotPasswordForm').style.display = 'none';
        });
        
        document.getElementById('forgotPassword').addEventListener('click', function(e) {
            e.preventDefault();
            document.getElementById('loginForm').style.display = 'none';
            document.getElementById('registerForm').style.display = 'none';
            document.getElementById('forgotPasswordForm').style.display = 'block';
        });
        
        document.getElementById('backToLogin').addEventListener('click', function(e) {
            e.preventDefault();
            document.getElementById('loginForm').style.display = 'block';
            document.getElementById('registerForm').style.display = 'none';
            document.getElementById('forgotPasswordForm').style.display = 'none';
        });
        
        // Handle login
        document.getElementById('loginFormElement').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const email = document.getElementById('loginEmail').value;
            const password = document.getElementById('loginPassword').value;
            const rememberMe = document.getElementById('rememberMe').checked;
            
            if (!email || !password) {
                showToast('Iltimos, barcha maydonlarni toʻldiring!', 'error');
                return;
            }
            
            showLoading();
            
            try {
                // In real application, this would be an API call
                // For demo, we'll simulate a successful login
                setTimeout(() => {
                    // Simulate API response
                    const mockUser = {
                        id: 'user_123',
                        email: email,
                        firstName: 'Ali',
                        lastName: 'Valiyev',
                        phone: '+998 90 123 45 67',
                        token: 'mock_jwt_token_' + Date.now(),
                        role: 'user'
                    };
                    
                    // Save user data
                    localStorage.setItem('currentUser', JSON.stringify(mockUser));
                    localStorage.setItem('authToken', mockUser.token);
                    if (rememberMe) {
                        localStorage.setItem('rememberEmail', email);
                    }
                    
                    currentUser = mockUser;
                    
                    hideLoading();
                    showToast('Muvaffaqiyatli kirish!', 'success');
                    
                    // Show dashboard
                    showDashboard();
                    
                }, 1500);
                
            } catch (error) {
                hideLoading();
                showToast('Kirishda xatolik: ' + error.message, 'error');
            }
        });
        
        // Handle registration
        document.getElementById('registerFormElement').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const firstName = document.getElementById('registerFirstName').value;
            const lastName = document.getElementById('registerLastName').value;
            const email = document.getElementById('registerEmail').value;
            const phone = document.getElementById('registerPhone').value;
            const password = document.getElementById('registerPassword').value;
            const confirmPassword = document.getElementById('registerConfirmPassword').value;
            
            // Validation
            if (!firstName || !lastName || !email || !phone || !password || !confirmPassword) {
                showToast('Iltimos, barcha maydonlarni toʻldiring!', 'error');
                return;
            }
            
            if (password !== confirmPassword) {
                showToast('Parollar mos kelmadi!', 'error');
                return;
            }
            
            if (!document.getElementById('acceptTerms').checked) {
                showToast('Foydalanish shartlarini qabul qilishingiz kerak!', 'error');
                return;
            }
            
            showLoading();
            
            try {
                // In real application, this would be an API call
                setTimeout(() => {
                    // Simulate API response
                    const mockUser = {
                        id: 'user_' + Date.now(),
                        email: email,
                        firstName: firstName,
                        lastName: lastName,
                        phone: phone,
                        token: 'mock_jwt_token_' + Date.now(),
                        role: 'user'
                    };
                    
                    // Save user data
                    localStorage.setItem('currentUser', JSON.stringify(mockUser));
                    localStorage.setItem('authToken', mockUser.token);
                    
                    currentUser = mockUser;
                    
                    hideLoading();
                    showToast('Muvaffaqiyatli roʻyxatdan oʻtdingiz!', 'success');
                    
                    // Show dashboard
                    showDashboard();
                    
                }, 1500);
                
            } catch (error) {
                hideLoading();
                showToast('Roʻyxatdan oʻtishda xatolik: ' + error.message, 'error');
            }
        });
        
        // Handle forgot password
        document.getElementById('forgotPasswordFormElement').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const email = document.getElementById('forgotEmail').value;
            
            if (!email) {
                showToast('Iltimos, elektron pochtangizni kiriting!', 'error');
                return;
            }
            
            showLoading();
            
            try {
                // Simulate API call
                setTimeout(() => {
                    hideLoading();
                    showToast('Parol tiklash havolasi elektron pochtangizga yuborildi!', 'success');
                    document.getElementById('loginForm').style.display = 'block';
                    document.getElementById('forgotPasswordForm').style.display = 'none';
                }, 1500);
                
            } catch (error) {
                hideLoading();
                showToast('Xatolik: ' + error.message, 'error');
            }
        });
        
        // ==================== DASHBOARD FUNCTIONS ====================
        
        // Show dashboard after login
        function showDashboard() {
            document.getElementById('authContainer').style.display = 'none';
            document.getElementById('dashboardContainer').style.display = 'flex';
            
            // Load user data
            loadUserData();
            
            // Load dashboard stats
            loadDashboardStats();
            
            // Load user cards
            loadUserCards();
        }
        
        // Load user data
        function loadUserData() {
            if (!currentUser) {
                const savedUser = localStorage.getItem('currentUser');
                if (savedUser) {
                    currentUser = JSON.parse(savedUser);
                } else {
                    // If no user is logged in, show auth container
                    document.getElementById('authContainer').style.display = 'flex';
                    document.getElementById('dashboardContainer').style.display = 'none';
                    return;
                }
            }
            
            // Update UI with user data
            document.getElementById('userName').textContent = 
                `${currentUser.firstName} ${currentUser.lastName}`;
            document.getElementById('userEmail').textContent = currentUser.email;
            document.getElementById('userAvatar').textContent = 
                currentUser.firstName.charAt(0) + currentUser.lastName.charAt(0);
        }
        
        // Load dashboard statistics
        function loadDashboardStats() {
            // In real app, this would be an API call
            document.getElementById('totalCards').textContent = userCards.length;
            document.getElementById('totalViews').textContent = '1,234';
            document.getElementById('totalDownloads').textContent = '567';
            document.getElementById('totalShares').textContent = '89';
        }
        
        // Load user's cards
        function loadUserCards() {
            // Load from localStorage for demo
            const savedCards = localStorage.getItem('userCards_' + (currentUser?.id || 'demo'));
            if (savedCards) {
                userCards = JSON.parse(savedCards);
            } else {
                // Create demo cards for first-time users
                userCards = [
                    {
                        id: 'card_1',
                        fullName: 'Ali Valiyev',
                        position: 'Bosh Direktor',
                        company: 'TechCorp MChJ',
                        phone: '+998 90 123 45 67',
                        email: 'ali@techcorp.uz',
                        website: 'https://techcorp.uz',
                        address: 'Toshkent sh., Yunusobod',
                        color: '#2c3e50',
                        status: 'active',
                        createdAt: new Date().toISOString(),
                        views: 123,
                        downloads: 45,
                        shares: 12
                    },
                    {
                        id: 'card_2',
                        fullName: 'Sarvar Karimov',
                        position: 'Marketing Menejeri',
                        company: 'Alpha Business',
                        phone: '+998 91 234 56 78',
                        email: 'sarvar@alphabiz.uz',
                        website: 'https://alphabiz.uz',
                        address: 'Samarqand sh., Registon ko\'chasi',
                        color: '#27ae60',
                        status: 'active',
                        createdAt: new Date().toISOString(),
                        views: 89,
                        downloads: 23,
                        shares: 5
                    }
                ];
                localStorage.setItem('userCards_' + (currentUser?.id || 'demo'), JSON.stringify(userCards));
            }
            
            updateCardsTable();
        }
        
        // Update cards table
        function updateCardsTable() {
            const tableBody = document.getElementById('cardsTableBody');
            
            if (userCards.length === 0) {
                tableBody.innerHTML = `
                    <div class="table-row" style="text-align: center; padding: 40px;">
                        <div style="grid-column: 1 / -1;">
                            <i class="fas fa-id-card" style="font-size: 2rem; color: var(--gray); margin-bottom: 15px;"></i><br>
                            Hozircha vizitkalar mavjud emas
                        </div>
                    </div>
                `;
                return;
            }
            
            tableBody.innerHTML = '';
            
            userCards.forEach((card, index) => {
                const row = document.createElement('div');
                row.className = 'table-row';
                row.innerHTML = `
                    <div>
                        <strong>${card.fullName}</strong><br>
                        <small style="color: var(--gray);">${card.company}</small>
                    </div>
                    <div>${card.position}</div>
                    <div>${card.phone}</div>
                    <div>
                        <span class="status-badge ${card.status === 'active' ? 'status-active' : 'status-inactive'}">
                            ${card.status === 'active' ? 'Faol' : 'Nofaol'}
                        </span>
                    </div>
                    <div class="action-buttons">
                        <button class="action-btn view" onclick="viewCard(${index})" title="Ko'rish">
                            <i class="fas fa-eye"></i>
                        </button>
                        <button class="action-btn edit" onclick="editCard(${index})" title="Tahrirlash">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="action-btn delete" onclick="deleteCard(${index})" title="O'chirish">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                `;
                tableBody.appendChild(row);
            });
        }
        
        // ==================== CARD MANAGEMENT FUNCTIONS ====================
        
        // Preview card photo
        function previewCardPhoto(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const preview = document.getElementById('cardPhotoPreview');
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                }
                reader.readAsDataURL(file);
            }
        }
        
        // Preview card
        function previewCard() {
            const formData = {
                fullName: document.getElementById('cardFullName').value || 'Ali Valiyev',
                position: document.getElementById('cardPosition').value || 'Direktor',
                company: document.getElementById('cardCompany').value || 'TechCorp MChJ',
                phone: document.getElementById('cardPhone').value || '+998 90 123 45 67',
                email: document.getElementById('cardEmail').value || 'ali@techcorp.uz',
                website: document.getElementById('cardWebsite').value || 'https://techcorp.uz',
                address: document.getElementById('cardAddress').value || 'Toshkent sh., Yunusobod',
                color: document.getElementById('cardColor').value || '#2c3e50'
            };
            
            // Generate card ID
            const companyPrefix = formData.company.substring(0, 2).toUpperCase();
            const year = new Date().getFullYear();
            const randomNum = Math.floor(Math.random() * 1000).toString().padStart(3, '0');
            const cardId = `${companyPrefix}-${year}-${randomNum}`;
            
            // Update preview
            const previewDiv = document.getElementById('idCardPreview');
            previewDiv.innerHTML = `
                <div class="card-header">
                    <div class="company-logo">${formData.company.substring(0, 10)}</div>
                    <div class="card-type">ID Karta</div>
                </div>
                
                <div class="card-body">
                    ${document.getElementById('cardPhotoPreview').src ? 
                        `<img class="card-photo" src="${document.getElementById('cardPhotoPreview').src}" alt="Rasm">` :
                        `<div style="width: 120px; height: 120px; border-radius: 15px; background: ${formData.color}; display: flex; align-items: center; justify-content: center; color: white; font-size: 3rem;">
                            <i class="fas fa-user"></i>
                        </div>`
                    }
                    <div class="card-info">
                        <h2>${formData.fullName}</h2>
                        <p><i class="fas fa-briefcase"></i> ${formData.position}</p>
                        <p><i class="fas fa-building"></i> ${formData.company}</p>
                        <p><i class="fas fa-phone"></i> ${formData.phone}</p>
                        <p><i class="fas fa-envelope"></i> ${formData.email}</p>
                        <p><i class="fas fa-map-marker-alt"></i> ${formData.address}</p>
                    </div>
                </div>
                
                <div class="card-footer">
                    <div class="barcode-container">
                        <svg id="barcode"></svg>
                    </div>
                    <div class="card-id">ID: ${cardId}</div>
                </div>
            `;
            
            // Set background color
            previewDiv.style.background = `linear-gradient(135deg, ${formData.color}, #4a6491)`;
            
            // Generate barcode
            setTimeout(() => {
                JsBarcode("#barcode", cardId, {
                    format: "CODE128",
                    width: 2,
                    height: 60,
                    displayValue: true,
                    fontSize: 16,
                    background: "#ffffff",
                    lineColor: "#000000"
                });
            }, 100);
            
            // Show preview section
            document.getElementById('cardPreviewSection').style.display = 'block';
        }
        
        // Create new card
        document.getElementById('createCardForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const cardData = {
                id: 'card_' + Date.now(),
                fullName: document.getElementById('cardFullName').value,
                position: document.getElementById('cardPosition').value,
                company: document.getElementById('cardCompany').value,
                phone: document.getElementById('cardPhone').value,
                email: document.getElementById('cardEmail').value,
                website: document.getElementById('cardWebsite').value,
                address: document.getElementById('cardAddress').value,
                color: document.getElementById('cardColor').value,
                template: document.getElementById('cardTemplate').value,
                photo: document.getElementById('cardPhotoPreview').src,
                status: 'active',
                createdAt: new Date().toISOString(),
                views: 0,
                downloads: 0,
                shares: 0
            };
            
            // Add to user's cards
            userCards.push(cardData);
            localStorage.setItem('userCards_' + (currentUser?.id || 'demo'), JSON.stringify(userCards));
            
            // Update UI
            updateCardsTable();
            loadDashboardStats();
            
            // Show success message
            showToast('Vizitka muvaffaqiyatli yaratildi!', 'success');
            
            // Reset form
            document.getElementById('createCardForm').reset();
            document.getElementById('cardPhotoPreview').style.display = 'none';
            document.getElementById('cardPreviewSection').style.display = 'none';
            
            // Switch to My Cards page
            switchPage('my-cards');
        });
        
        // View card details
        function viewCard(index) {
            const card = userCards[index];
            
            document.getElementById('modalTitle').textContent = card.fullName;
            document.getElementById('modalContent').innerHTML = `
                <div style="display: grid; grid-template-columns: auto 1fr; gap: 20px; margin: 20px 0;">
                    <div>
                        ${card.photo ? 
                            `<img src="${card.photo}" style="width: 120px; height: 120px; border-radius: 15px; object-fit: cover;">` :
                            `<div style="width: 120px; height: 120px; border-radius: 15px; background: ${card.color}; display: flex; align-items: center; justify-content: center; color: white;">
                                <i class="fas fa-user" style="font-size: 3rem;"></i>
                            </div>`
                        }
                    </div>
                    <div>
                        <p><strong>ID:</strong> ${card.id}</p>
                        <p><strong>Lavozim:</strong> ${card.position}</p>
                        <p><strong>Kompaniya:</strong> ${card.company}</p>
                        <p><strong>Telefon:</strong> ${card.phone}</p>
                        <p><strong>Email:</strong> ${card.email}</p>
                        <p><strong>Veb sayt:</strong> ${card.website || 'Mavjud emas'}</p>
                        <p><strong>Manzil:</strong> ${card.address || 'Mavjud emas'}</p>
                        <p><strong>Yaratilgan:</strong> ${new Date(card.createdAt).toLocaleDateString('uz-UZ')}</p>
                    </div>
                </div>
                <div style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 10px; margin-top: 20px;">
                    <div style="text-align: center; background: #f8f9fa; padding: 10px; border-radius: 8px;">
                        <div style="font-size: 1.5rem; font-weight: bold; color: var(--primary);">${card.views}</div>
                        <div style="font-size: 0.9rem; color: var(--gray);">Ko'rishlar</div>
                    </div>
                    <div style="text-align: center; background: #f8f9fa; padding: 10px; border-radius: 8px;">
                        <div style="font-size: 1.5rem; font-weight: bold; color: var(--secondary);">${card.downloads}</div>
                        <div style="font-size: 0.9rem; color: var(--gray);">Yuklab olishlar</div>
                    </div>
                    <div style="text-align: center; background: #f8f9fa; padding: 10px; border-radius: 8px;">
                        <div style="font-size: 1.5rem; font-weight: bold; color: var(--warning);">${card.shares}</div>
                        <div style="font-size: 0.9rem; color: var(--gray);">Ulashishlar</div>
                    </div>
                </div>
                <div style="text-align: center; margin-top: 20px;">
                    <button onclick="downloadCardById('${card.id}')" style="background: var(--primary); color: white; border: none; padding: 12px 24px; border-radius: 8px; cursor: pointer; margin-right: 10px;">
                        <i class="fas fa-download"></i> Yuklab olish
                    </button>
                    <button onclick="shareCardById('${card.id}')" style="background: var(--secondary); color: white; border: none; padding: 12px 24px; border-radius: 8px; cursor: pointer;">
                        <i class="fas fa-share-alt"></i> Ulashish
                    </button>
                </div>
            `;
            
            document.getElementById('cardModal').style.display = 'flex';
        }
        
        // Edit card
        function editCard(index) {
            const card = userCards[index];
            
            // Fill form with card data
            document.getElementById('cardFullName').value = card.fullName;
            document.getElementById('cardPosition').value = card.position;
            document.getElementById('cardCompany').value = card.company;
            document.getElementById('cardPhone').value = card.phone;
            document.getElementById('cardEmail').value = card.email;
            document.getElementById('cardWebsite').value = card.website || '';
            document.getElementById('cardAddress').value = card.address || '';
            document.getElementById('cardColor').value = card.color;
            
            if (card.photo) {
                document.getElementById('cardPhotoPreview').src = card.photo;
                document.getElementById('cardPhotoPreview').style.display = 'block';
            }
            
            // Switch to create card page
            switchPage('create-card');
            showToast('Vizitka tahrirlash rejimi', 'info');
        }
        
        // Delete card
        function deleteCard(index) {
            if (confirm('Bu vizitkani oʻchirishni istaysizmi?')) {
                userCards.splice(index, 1);
                localStorage.setItem('userCards_' + (currentUser?.id || 'demo'), JSON.stringify(userCards));
                updateCardsTable();
                loadDashboardStats();
                showToast('Vizitka muvaffaqiyatli oʻchirildi', 'success');
            }
        }
        
        // Download card
        function downloadCard() {
            const cardElement = document.getElementById('idCardPreview');
            
            html2canvas(cardElement).then(canvas => {
                const link = document.createElement('a');
                link.download = `vizitka-${Date.now()}.png`;
                link.href = canvas.toDataURL('image/png');
                link.click();
                showToast('Vizitka yuklab olindi!', 'success');
            });
        }
        
        function downloadCardById(cardId) {
            // Implement card download by ID
            showToast('Vizitka yuklab olindi!', 'success');
        }
        
        // Print card
        function printCard() {
            const cardElement = document.getElementById('idCardPreview');
            const printWindow = window.open('', '_blank');
            printWindow.document.write(`
                <html>
                    <head>
                        <title>Vizitka Chop etish</title>
                        <style>
                            body { margin: 0; padding: 20px; }
                            @media print {
                                @page { margin: 0; }
                                body { padding: 0; }
                            }
                        </style>
                    </head>
                    <body>
                        ${cardElement.outerHTML}
                        <script>
                            window.onload = function() { window.print(); window.close(); }
                        <\/script>
                    </body>
                </html>
            `);
            printWindow.document.close();
        }
        
        // Share card
        function shareCard() {
            if (navigator.share) {
                navigator.share({
                    title: 'Mening vizitkam',
                    text: 'Bu mening professional vizitkam',
                    url: window.location.href
                }).then(() => {
                    showToast('Vizitka muvaffaqiyatli ulashildi!', 'success');
                });
            } else {
                navigator.clipboard.writeText(window.location.href);
                showToast('Havola buferga nusxalandi!', 'success');
            }
        }
        
        function shareCardById(cardId) {
            // Implement card sharing by ID
            showToast('Vizitka ulashildi!', 'success');
        }
        
        // ==================== PAGE NAVIGATION ====================
        
        // Switch between pages
        function switchPage(pageName) {
            // Hide all pages
            document.querySelectorAll('[id$="Page"]').forEach(page => {
                page.style.display = 'none';
            });
            
            // Show selected page
            document.getElementById(pageName + 'Page').style.display = 'block';
            
            // Update page title
            const titles = {
                'dashboard': 'Boshqaruv paneli',
                'create-card': 'Vizitka Yaratish',
                'my-cards': 'Mening Vizitkalarim',
                'templates': 'Shablonlar',
                'scan': 'QR Skanerlash',
                'settings': 'Sozlamalar'
            };
            document.getElementById('pageTitle').textContent = titles[pageName];
            
            // Update active menu item
            document.querySelectorAll('.menu-item').forEach(item => {
                item.classList.remove('active');
                if (item.dataset.page === pageName) {
                    item.classList.add('active');
                }
            });
        }
        
        // Add click event listeners to menu items
        document.querySelectorAll('.menu-item').forEach(item => {
            item.addEventListener('click', function(e) {
                e.preventDefault();
                switchPage(this.dataset.page);
            });
        });
        
        // Show create card form
        function showCreateCard() {
            switchPage('create-card');
        }
        
        // Close modal
        function closeModal() {
            document.getElementById('cardModal').style.display = 'none';
        }
        
        // Logout
        function logout() {
            if (confirm('Tizimdan chiqishni istaysizmi?')) {
                // Clear user data
                localStorage.removeItem('currentUser');
                localStorage.removeItem('authToken');
                currentUser = null;
                
                // Show auth container
                document.getElementById('authContainer').style.display = 'flex';
                document.getElementById('dashboardContainer').style.display = 'none';
                
                // Reset auth forms
                document.getElementById('loginForm').style.display = 'block';
                document.getElementById('registerForm').style.display = 'none';
                document.getElementById('forgotPasswordForm').style.display = 'none';
                
                showToast('Muvaffaqiyatli chiqildi', 'success');
            }
        }
        
        // ==================== INITIALIZATION ====================
        
        // Check if user is already logged in
        document.addEventListener('DOMContentLoaded', function() {
            const savedUser = localStorage.getItem('currentUser');
            const savedToken = localStorage.getItem('authToken');
            
            if (savedUser && savedToken) {
                currentUser = JSON.parse(savedUser);
                showDashboard();
            } else {
                // Check for remembered email
                const rememberedEmail = localStorage.getItem('rememberEmail');
                if (rememberedEmail) {
                    document.getElementById('loginEmail').value = rememberedEmail;
                    document.getElementById('rememberMe').checked = true;
                }
            }
            
            // Initialize barcode library
            JsBarcode("#barcode", "DEMO-12345", {
                format: "CODE128",
                width: 2,
                height: 60,
                displayValue: true,
                fontSize: 16,
                background: "#ffffff",
                lineColor: "#000000"
            });
        });
    </script>
</body>
</html>